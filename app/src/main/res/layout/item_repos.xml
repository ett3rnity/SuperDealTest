<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_item_repos"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_repos_name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="rocksdb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_repos_description"
                android:textSize="16sp"
                android:text="A library that provides an embedable, persistent key-value store for fast storage"
                android:layout_below="@id/tv_item_repos_name"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>