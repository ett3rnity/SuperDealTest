<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="alexanderivanets.superdealtest.view.RecentFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent_search"
            android:id="@+id/tv_header_no_recent"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textStyle="bold"/>


        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/iv_no_items"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_header_no_recent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="No items in database!"
            android:layout_below="@id/iv_no_items"/>




    </RelativeLayout>

</FrameLayout>
